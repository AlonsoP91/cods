#listas

lista=["Lunes"]
print(lista[0:])#hasta el final
print(lista[:4])#hasta el final

lista.append("Martes")#agregar al final
lista.insert(3,4)# primero el indice y luego el valor
lista.extend([6,7,8])#concatenar una lista al final
#lista1=lista2+lista3

print(3 in lista)# 3 este en lista?

lista.index(5)# le das el valor y te devuelve el indice
lista.count(2)#cuantas veces aparece el 2
lista.pop()#eliminar el ultimo elemento
lista.pop(2)#indice que se quiere eliminar

lista.remove(5)#le pasas el valor apra eliminar
lista.reverse()#swap

lista=["Lunes"]*2

lista3=[5,4,2,6,7,8,1]
lista3.sort()#ordenar ascendente
lista.sort(reverse=True)#ordenar descendente

empty_list = list() # this is an empty list, no item in the list
print(len(empty_list)) # 0


